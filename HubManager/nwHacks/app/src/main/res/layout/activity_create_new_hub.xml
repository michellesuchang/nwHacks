<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.hfad.hubmanager.HubActivity">

    <EditText
        android:id="@+id/hub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Hub Name"
        android:inputType="textPersonName|textVisiblePassword"
        android:layout_marginTop="0dp"
        />

    <EditText
        android:id="@+id/collab_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Add Member Emails"
        android:inputType="textEmailAddress|textVisiblePassword"
        android:layout_below="@+id/hub_name"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/add_collab"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:fontFamily="sans-serif"
        android:text="+"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/collab_email"
        android:layout_alignBaseline="@+id/collab_email"
         />

    <Button
        android:id="@+id/save_hub_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Save Changes" />

</RelativeLayout>
